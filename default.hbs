<!DOCTYPE html>
<html lang="{{@site.locale}}">
  <head>
    {{!-- Document Settings --}}
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">

    {{!-- Page Meta --}}
    <title>{{meta_title}}</title>

    {{!-- Mobile Meta --}}
    <meta name="HandheldFriendly" content="True" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    
    {{!-- PWA --}}
    {{!-- <meta name="theme-color" content="{{@site.accent_color}}">
    <link rel="manifest" href="/manifest.webmanifest">
    <link rel="apple-touch-icon" href="{{asset 'icon-192x192.png'}}"> --}}

    {{!-- Preloading --}}
    <link rel="preload" href="{{asset 'dist/app.min.js'}}" as="script">
    <link rel="preload" href="{{asset 'dist/app.min.css'}}" as="style">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    {{#if @custom.typography}}
      {{#match @custom.typography "Inter"}}
        <link rel="preload stylesheet" href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&display=swap" 
              as="style" onload="this.onload=null;this.rel='stylesheet'" crossorigin>

        {{!-- No Js --}}
        <noscript>
          <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">
        </noscript>
      {{/match}}

      {{!-- Cabin --}}
      {{#match @custom.typography "Cabin"}}
        <link rel="preload stylesheet" href="https://fonts.googleapis.com/css2?family=Cabin:ital,wght@0,400;0,500;0,600;0,700;1,400;1,500;1,600;1,700&display=swap" 
              as="style" onload="this.onload=null;this.rel='stylesheet'" crossorigin>
        <noscript>
          <link href="https://fonts.googleapis.com/css2?family=Cabin:ital,wght@0,400;0,500;0,600;0,700;1,400;1,500;1,600;1,700&display=swap" rel="stylesheet">
        </noscript>
        <style>
          body {
            --font-sans: 'Cabin';
          }
        </style>
      {{/match}}

      {{!-- Lora --}}
      {{#match @custom.typography "Lora"}}
        <link rel="preload stylesheet" href="https://fonts.googleapis.com/css2?family=Lora:ital,wght@0,400;0,500;0,600;0,700;1,400;1,500;1,600;1,700&display=swap" 
              as="style" onload="this.onload=null;this.rel='stylesheet'" crossorigin>
        <noscript>
          <link href="https://fonts.googleapis.com/css2?family=Lora:ital,wght@0,400;0,500;0,600;0,700;1,400;1,500;1,600;1,700&display=swap" rel="stylesheet">
        </noscript>
        <style>
          body {
            --font-sans: 'Lora';
          }
        </style>
      {{/match}}

      {{!-- Manrope --}}
      {{#match @custom.typography "Manrope"}}
        <link rel="preload stylesheet" href="https://fonts.googleapis.com/css2?family=Manrope:wght@400;500;600;700;800&display=swap" 
              as="style" onload="this.onload=null;this.rel='stylesheet'" crossorigin>
        <noscript>
          <link href="https://fonts.googleapis.com/css2?family=Manrope:wght@400;500;600;700;800&display=swap" rel="stylesheet">
        </noscript>
        <style>
          body {
            --font-sans: 'Manrope';
          }
        </style>
      {{/match}}

      {{!-- Inconsolata --}}
      {{#match @custom.typography "Inconsolata"}}
        <link rel="preload stylesheet" href="https://fonts.googleapis.com/css2?family=Inconsolata:wght@400;500;600;700;800;900&display=swap" 
              as="style" onload="this.onload=null;this.rel='stylesheet'" crossorigin>
        <noscript>
          <link href="https://fonts.googleapis.com/css2?family=Inconsolata:wght@400;500;600;700;800;900&display=swap" rel="stylesheet">
        </noscript>
        <style>
          body {
            --font-sans: 'Inconsolata';
          }
        </style>
      {{/match}}
    {{else}}
      <link rel="preload stylesheet" href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&display=swap" 
            as="style" onload="this.onload=null;this.rel='stylesheet'" crossorigin>

      {{!-- No Js --}}
      <noscript>
        <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">
      </noscript>
    {{/if}}

    {{!-- Main theme scripts --}}
    <script async defer src="{{asset 'dist/app.min.js'}}"></script>

    {{!-- Styles --}}
    <link rel="stylesheet" type="text/css" href="{{asset 'dist/app.min.css'}}" />

    {{!-- Critical CSS --}}
    <!--cssential--><style></style><!--/cssential-->

    {{!-- Theme Configuration --}}
    {{> theme-config}}

    {{!-- Global scripts for setting values --}}
    {{> theme-scripts}}
    
    {{!-- Syntax highlighting plugin - can be activated using #syntax-highlight internal tag --}}
    {{#post}}
      {{#has tag="#syntax-highlight"}}
        {{!-- Preloading --}}
        <link rel="preload" href="https://cdnjs.cloudflare.com/ajax/libs/prism/1.23.0/themes/prism.min.css" as="style">
        <link rel="preload" href="https://cdnjs.cloudflare.com/ajax/libs/prism/1.23.0/prism.min.js" as="script">

        {{!-- Script and style --}}
        <link rel="preload stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/prism/1.23.0/themes/prism.min.css"
          as="style" onload="this.onload=null;this.rel='stylesheet'" crossorigin/>
        <script async src="https://cdnjs.cloudflare.com/ajax/libs/prism/1.23.0/prism.min.js"></script>
      {{/has}}
    {{/post}}

    {{!-- Ghost outputs important style and meta data with this tag --}}
    {{ghost_head}}
  </head>
  <body class="{{body_class}}">
    {{!-- Announcement --}}
    {{> announcement}}
    
    {{!-- Progress Bar for posts --}}
    {{#is "post"}}<div class="progress-bar"></div>{{/is}}
    
    {{!-- Site header --}}
    {{> header}}

    {{!-- Site Menu --}}
    {{> menu}}

    {{!-- Site Search --}}
    {{> search}}

    <main class="container wrapper main{{#is "signin, signup"}} flex{{/is}}">
      {{!-- All the main content gets inserted here, index.hbs, post.hbs, etc --}}
      {{{body}}}
    </main>

    {{!-- The footer at the very bottom --}}
    {{> footer}}

    {{!-- Scroll top function --}}
    {{> scroll-top}}
  
    {{{block "toc"}}}

    {{!-- Notifications --}}
    {{> notifications}}

    {{!-- Service Worker for PWA --}}
    <script>
      if (CONFIG.ENABLE_PWA && 'serviceWorker' in navigator) {
        window.addEventListener('load', function() {
          navigator.serviceWorker.register('/sw.js');
        });
      }
    </script>

    {{!-- The #block helper will pull in data from the #contentFor other template files. --}}
    {{{block "scripts"}}}

    {{!-- Ghost outputs important scripts and data with this tag --}}
    {{ghost_foot}}
  </body>
</html>
