{{!-- Comments --}}
{{#if comments}}
  {{^has tag="#nocomment"}} {{!-- don't render comments if post has #nocomment tag --}}
    <div class="bg-acc-1">
      <div class="content-wrap">
        <div class="comments flex flex-col flex-cc p p-t-lg" id="comments">
          {{!-- Comment/Uncomment below line to activate or deactivate native comments --}}
          {{comments 
            title=""
            count=false
            mode=auto
          }}

          {{!-- Comment/Uncomment below line to activate or deactivate cove comments --}}
          {{!-- {{> comments-cove}} --}}

          {{!-- Comment/Uncomment below line to activate or deactivate disqus comments --}}
          {{!-- {{> comments-disqus}} --}}
        </div>
      </div>
    </div>
  {{/has}}
{{/if}}